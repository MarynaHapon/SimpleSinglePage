footer
    background-color $white
    border-top 2px solid $gainsboro

    .inner
        display flex
        justify-content space-between
        align-items center


.copyright
    font-size 16px
    color $zambezi


.social-list
    display flex


.social-item
    margin 0 10px


.social-facebook
.social-google
.social-insta
    display inline-block
    border-radius 100%
    size(50px)
    background url('../img/general/footer-sprite.png') no-repeat

    &:hover
        background-color $dark-orange

    &:active
        background-color $bittersweet

    &:focus
         outline $dark-orange auto 2px



.social-facebook
    background-position 15px 10px


.social-google
    background-position -46px  10px


.social-insta
    background-position -125px 10px