.join
    padding 150px 0
    background linear-gradient(90deg, $bittersweet, $neon-carrot)


.join-title
.join-text
    text-align center
    color $white


.join-title
    font-size 30px
    letter-spacing 0.2em
    text-transform uppercase
    font-weight normal


.join-text
    margin 30px auto 95px
    max-width 715px
    font-size 18px
    line-height 36px
    letter-spacing 0.01em


.join-form
    margin 0 auto
    width 830px


input[type='email']::placeholder
input[type='email']
    font-size 16px
    letter-spacing 0.075em
    color $white-tint


input[type='email']
    width 100%
    max-width 600px
    padding 22px 30px
    background-color transparent
    border-radius 5px
    border 2px solid $white


.btn-join
    margin 0 0 0 25px
    padding 22px 40px
    background-color $white
    color $dark-orange
    border-radius 5px
    box-shadow 0px 0px 3px 3px $dark-orange
    border 2px solid $white

    &:hover
        cursor pointer

    &:active
        box-shadow 0