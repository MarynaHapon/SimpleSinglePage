.join
    padding 150px 0
    background linear-gradient(135deg, $bittersweet, $neon-carrot)


.join-title
.join-text
    text-align center
    color $white


.join-title
    font-size 30px
    letter-spacing 0.2em
    text-transform uppercase
    font-weight normal


.join-text
    margin 30px auto 95px
    max-width 715px
    font-size 18px
    line-height 36px
    letter-spacing 0.01em


.join-form
    display flex


input[type='email']::placeholder
input[type='email']
    font-size 16px
    letter-spacing 0.075em
    color $white-tint


input[type='email']
    padding 22px 30px
    background-color transparent
    border-radius 5px
    border 2px solid $white


.btn-join
    padding 22px 40px
    background-color $white
    color $dark-orange
    border-radius 5px
    box-shadow 0px 0px 40px 0px $bittersweet
    border 2px solid $white
    transition .3s

    &:hover
        background-color rgba(0,0,0,0)
        color $white
        cursor pointer
        box-shadow 0

    &:active
        box-shadow 0


input[type='email']
.btn-join
    &:focus
        outline-style auto
        outline-color #02a5db
